[user]
    name  = {{ promptStringOnce . "gitName"  "Git full name" | quote }}
    email = {{ promptStringOnce . "gitEmail" "Git email"     | quote }}
[core]
    editor = vim
    quotepath = false
[include]
    path = ~/.gitconfig.local
[merge]
    tool = vimdiff
[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
[pull]
    ff = only
    rebase = yes
[url "git@github.com:"]
	insteadOf = https://github.com/
